{
  "name": "aniflix",
  "version": "0.1.0",
  "author": "Daniel Santos",
  "homepage": "./",
  "description": "Anime streaming app",
  "main": "public/electron.js",
  "repository": "https://github.com/dansenpai/aniflix-desktop",
  "build": {
    "appId": "com.aniflix",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bulma": "^0.8.0",
    "electron-is-dev": "^0.3.0",
    "electron-titlebar-windows": "^3.0.0",
    "electron-updater": "^2.10.1",
    "lodash": "^4.17.15",
    "node-sass-chokidar": "0.0.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-icons": "^3.7.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "1.0.10",
    "styled-components": "^4.4.0",
    "video-react": "^0.14.1"
  },
  "lint-staged": {
    "{{public,src}/**/*.{scss,js,json},package.json}": [
      "prettier --write \"{{public,src}/**/*.{scss,js,json},package.json}\"",
      "git add"
    ]
  },
  "scripts": {
    "preship": "yarn build && yarn build-css",
    "ship": "build --em.main=build/electron.js --win --ia32 -p always -c electron-builder.yml",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "pretty": "prettier --write \"{{public,src}/**/*.{css,scss,js,json},package.json}\"",
    "precommit": "lint-staged",
    "electron-dev": "concurrently  \"yarn watch-css\" \"SET BROWSER=none&&yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --em.main=build/electron.js --win --ia32 -c electron-builder.yml",
    "preelectron-pack": "yarn build && yarn build-css"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.20.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "wait-on": "^2.0.2"
  }
}
